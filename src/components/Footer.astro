---
import IconWhatsapp from "./icons/IconBrandWhatsapp.astro";
import IconInstagram from "./icons/IconBrandInstagram.astro";
---

<footer
  id="footer"
  class="bg-[var(--color-footer-bg)] text-[var(--color-text)] py-12 transition-colors duration-500"
>
  <div
    class="max-w-7xl mx-auto px-4 grid gap-10 md:grid-cols-2 text-sm leading-relaxed"
  >
    <!-- Marca / Descripción -->
    <div>
      <h2 class="text-xl font-bold mb-3 font-title text-[var(--color-accent)]">
        IABOT
      </h2>
      <p class="text-[var(--color-subtext)]">
        Robótica educativa para niños y adolescentes. Enseñamos programación,
        creatividad y trabajo en equipo con LEGO y tecnología.
      </p>
    </div>

    <!-- Contacto + Redes -->
    <div>
      <h3 class="font-semibold mb-3">Contacto</h3>
      <p class="text-[var(--color-subtext)]">Mercedes, Buenos Aires</p>
      <p>
        <a
          href="mailto:info@iabot.com.ar"
          class="text-[var(--color-accent)] hover:underline"
        >
          info@iabot.com.ar
        </a>
      </p>

      <div class="flex gap-5 mt-4">
        <a
          href="https://wa.me/+5492324468366"
          target="_blank"
          rel="noopener"
          aria-label="WhatsApp"
          title="WhatsApp"
          class="text-[var(--color-text)] hover:text-[#25D366] transition"
        >
          <IconWhatsapp />
        </a>
        <a
          href="https://www.instagram.com/iabot.robotica/"
          target="_blank"
          rel="noopener"
          aria-label="Instagram"
          title="Instagram"
          class="text-[var(--color-text)] hover:text-[#E1306C] transition"
        >
          <IconInstagram />
        </a>
      </div>
    </div>
  </div>

  <div
    class="mt-10 border-t border-[var(--color-border)] pt-6 text-center text-xs text-[var(--color-subtext)]"
  >
    © {new Date().getFullYear()} IABOT. Todos los derechos reservados.
  </div>
</footer>

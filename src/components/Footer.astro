---
import IconWhatsapp from "./icons/IconBrandWhatsapp.astro";
import IconInstagram from "./icons/IconBrandInstagram.astro";
import IconLinkedIn from "./icons/IconBrandLinkedin.astro";
---

<footer
  id="footer"
  role="contentinfo"
  aria-labelledby="footer-title"
  class="bg-[var(--color-footer-bg)] text-[var(--color-text)] py-12 px-6 transition-colors duration-500"
>
  <div
    class="max-w-7xl mx-auto grid gap-10 md:grid-cols-3 text-sm leading-relaxed"
  >
    <!-- Marca / Descripción -->
    <div>
      <h2
        id="footer-title"
        class="text-xl font-bold mb-3 font-title text-[var(--color-accent)]"
      >
        IABOT
      </h2>
      <p class="text-[var(--color-subtext)]">
        Robótica educativa para chicos y chicas. Promovemos el aprendizaje de
        programación, creatividad y trabajo colaborativo utilizando robots LEGO
        y su tecnología.
      </p>
      <p class="mt-3 text-[var(--color-subtext)]">
        Presencial en Mercedes, Luján, San Andrés de Giles y San Antonio de Areco (Buenos Aires).
      </p>
    </div>

    <!-- Navegación -->
    <div>
      <h3 class="font-semibold mb-3">Navegación</h3>
      <ul class="space-y-1 text-[var(--color-subtext)]">
        <li><a href="/#cursos" class="hover:underline">Cursos</a></li>
        <li>
          <a href="/#special-programs" class="hover:underline">Docentes</a>
        </li>
        <li>
          <a href="/#special-programs" class="hover:underline">Empresas</a>
        </li>
        <li><a href="/#sedes" class="hover:underline">Sedes</a></li>
        <li><a href="/#footer" class="hover:underline">Contacto</a></li>
      </ul>
    </div>

    <!-- Contacto + Redes -->
    <div>
      <h3 class="font-semibold mb-3">Contacto</h3>
      <a
        href="mailto:info@iabot.com.ar"
        target="_blank"
        rel="noopener noreferrer"
        class="text-[var(--color-subtext)] hover:underline block mb-2"
      >
        info@iabot.com.ar
      </a>
      <a
        href="https://maps.app.goo.gl/LzzHWjMarwEYo8Qv7"
        target="_blank"
        rel="noopener noreferrer"
        class="text-[var(--color-subtext)] hover:underline block"
      >
        Sede Central: Calle 9 Nº 374, Mercedes (B)
      </a>

      <div class="flex gap-5 mt-4">
        <a
          href="https://wa.me/+5492324468366"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="WhatsApp de IABOT"
          class="text-[var(--color-text)] hover:text-[#25D366] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#25D366] transition duration-300"
        >
          <IconWhatsapp />
        </a>
        <a
          href="https://www.instagram.com/iabot.robotica/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Instagram de IABOT"
          class="text-[var(--color-text)] hover:text-[#E1306C] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#E1306C] transition duration-300"
        >
          <IconInstagram />
        </a>
        <a
          href="https://www.linkedin.com/company/iabot-robotica/"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="LinkedIn de IABOT"
          class="text-[var(--color-text)] hover:text-[#0077B5] focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[#0077B5] transition duration-300"
        >
          <IconLinkedIn />
        </a>
      </div>
    </div>
  </div>

  <div
    class="mt-10 border-t border-[var(--color-border)] pt-6 text-center text-xs text-[var(--color-subtext)]"
  >
    © {new Date().getFullYear()} IABOT. Todos los derechos reservados.
  </div>
</footer>

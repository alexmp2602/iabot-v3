---
import ThemeToggle from "../components/ThemeToggle.astro";
---

<header
  class="sticky top-0 z-50 w-full border-b border-[var(--glass-border)] bg-[var(--glass-bg)] text-[var(--color-text)] backdrop-blur-md transition-colors duration-300"
  x-data="{ open: false }"
  x-init="$watch('open', val => document.body.style.overflow = val ? 'hidden' : '')"
>
  <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a
      href="/"
      class="flex items-center focus:outline-none"
      aria-label="Volver al inicio"
    >
      <img
        id="logo-img"
        src="/assets/img/logo/edits/iabot-webp-06.webp"
        alt="Logo IABOT"
        class="h-10 w-auto"
        loading="lazy"
        decoding="async"
        width="200"
        height="40"
      />
    </a>

    <!-- Navegación desktop -->
    <nav
      role="navigation"
      class="hidden md:flex items-center gap-6 text-sm font-medium"
      aria-label="Navegación principal"
    >
      <a href="/#cursos" class="nav-link" title="Ir a Cursos">Cursos</a>
      <a href="/#special-programs" class="nav-link" title="Capacitación Docente"
        >Docentes</a
      >
      <a href="/#special-programs" class="nav-link" title="Family Day Empresas"
        >Empresas</a
      >
      <a href="/#sedes" class="nav-link" title="Ir a Sedes">Sedes</a>
      <a href="/#footer" class="nav-link" title="Ir a Contacto">Contacto</a>
    </nav>

    <!-- Controles -->
    <div class="flex items-center gap-4">
      <ThemeToggle />

      <!-- Botón hamburguesa móvil -->
      <button
        @click="open = !open"
        class="md:hidden relative w-10 h-10 flex items-center justify-center focus:outline-none group"
        aria-label="Abrir menú móvil"
        aria-controls="mobile-menu"
        :aria-expanded="open.toString()"
      >
        <span
          class="absolute w-6 h-0.5 bg-[var(--color-text)] rounded transition-all duration-300 ease-[cubic-bezier(0.4,0,0.2,1)]
    group-hover:scale-105"
          :class="open ? 'rotate-45 translate-y-0' : '-translate-y-2'"></span>
        <span
          class="absolute w-6 h-0.5 bg-[var(--color-text)] rounded transition-all duration-300 ease-[cubic-bezier(0.4,0,0.2,1)]
    group-hover:scale-105"
          :class="open ? 'opacity-0' : 'translate-y-0'"></span>
        <span
          class="absolute w-6 h-0.5 bg-[var(--color-text)] rounded transition-all duration-300 ease-[cubic-bezier(0.4,0,0.2,1)]
    group-hover:scale-105"
          :class="open ? '-rotate-45 translate-y-0' : 'translate-y-2'"></span>
      </button>
    </div>
  </div>

  <!-- Menú móvil -->
  <nav
    id="mobile-menu"
    x-show="open"
    x-transition:enter="transition ease-out duration-200"
    x-transition:enter-start="opacity-0 -translate-y-4"
    x-transition:enter-end="opacity-100 translate-y-0"
    x-transition:leave="transition ease-in duration-150"
    x-transition:leave-start="opacity-100 translate-y-0"
    x-transition:leave-end="opacity-0 -translate-y-4"
    @click.outside="open = false"
    class="md:hidden px-6 pb-6 pt-4 space-y-4 bg-[var(--glass-bg)] text-[var(--color-text)] border-t border-[var(--glass-border)] backdrop-blur-md rounded-b-lg shadow-xl"
    aria-label="Menú de navegación móvil"
  >
    <a href="/#cursos" @click="open = false" class="block text-base nav-link"
      >Cursos</a
    >
    <a
      href="/#special-programs"
      @click="open = false"
      class="block text-base nav-link">Docentes</a
    >
    <a
      href="/#special-programs"
      @click="open = false"
      class="block text-base nav-link">Empresas</a
    >
    <a href="/#sedes" @click="open = false" class="block text-base nav-link"
      >Sedes</a
    >
    <a href="/#footer" @click="open = false" class="block text-base nav-link"
      >Contacto</a
    >
  </nav>
</header>

---
const { title, ageRange, description, icon: Icon, href = "#" } = Astro.props;
---

<article
  class="rounded-xl border border-neutral-200 dark:border-neutral-800 bg-white dark:bg-neutral-900 shadow-sm hover:shadow-lg transition-all duration-300 p-6 flex flex-col justify-between h-full"
  role="group"
  aria-label={`Curso: ${title}`}
>
  <div class="mb-4">
    {Icon && <Icon />}

    <h3
      class="text-2xl mt-4 font-semibold leading-tight text-neutral-900 dark:text-neutral-100"
      style="font-family: var(--font-title);"
    >
      {title}
    </h3>

    <p class="text-base mt-2 text-neutral-700 dark:text-neutral-300">
      <strong>Edad sugerida:</strong>
      {ageRange}
    </p>

    <p
      class="text-base mt-3 text-neutral-800 dark:text-neutral-200 leading-relaxed"
    >
      {description}
    </p>
  </div>

  <div class="mt-4">
    <a href={href} class="btn">Ver m√°s</a>
  </div>
</article>

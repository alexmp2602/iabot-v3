---
const { title, level, age, description, link } = Astro.props;
---

<article
  class="bg-white dark:bg-neutral-900 text-left rounded-xl shadow-md hover:shadow-lg transition p-6 flex flex-col justify-between h-full"
>
  <div>
    <h3 class="text-xl font-semibold text-primary mb-1">{title}</h3>
    <p class="text-sm text-neutral-600 dark:text-neutral-400 mb-1">
      {level} · {age}
    </p>
    <p class="text-sm text-neutral-700 dark:text-neutral-300">{description}</p>
  </div>
  <div class="mt-4">
    <a
      href={link}
      class="inline-block text-sm font-medium text-primary hover:underline"
      >Ver más</a
    >
  </div>
</article>

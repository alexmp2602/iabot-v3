---
const ACTION =
  import.meta.env.PUBLIC_CONTACT_ENDPOINT || "https://formspree.io/f/mldlaakb";
const title = "Contacto";
const description =
  "Escribinos y te respondemos a la brevedad. También podés hablar por WhatsApp si preferís.";
---

<section
  id="contacto"
  role="region"
  aria-labelledby="contact-title"
  class="section bg-[var(--color-bg)] text-[var(--color-text)]"
>
  <div class="max-w-3xl mx-auto px-4">
    <h2
      id="contact-title"
      class="section-title font-title text-3xl sm:text-4xl mb-2"
    >
      {title}
    </h2>
    <p class="text-[var(--color-text)]/80 mb-8">
      {description}
    </p>

    <form
      id="contact-form"
      action={ACTION}
      method="POST"
      accept-charset="UTF-8"
      class="grid gap-4 sm:gap-6"
      aria-describedby="contact-status"
      autocomplete="on"
    >
      <!-- honeypot -->
      <div class="sr-only" aria-hidden="true">
        <label for="website">Dejá este campo vacío</label>
        <input
          id="website"
          name="website"
          type="text"
          tabindex="-1"
          autocomplete="off"
        />
      </div>

      <div class="grid sm:grid-cols-2 gap-4">
        <div>
          <label for="name" class="block text-sm mb-1">Nombre y apellido</label>
          <input
            id="name"
            name="name"
            type="text"
            required
            maxlength="100"
            autocomplete="name"
            class="w-full rounded-md border border-[var(--glass-border)] bg-[var(--glass-bg)] px-3 py-2"
          />
        </div>
        <div>
          <label for="email" class="block text-sm mb-1">Email</label>
          <input
            id="email"
            name="email"
            type="email"
            required
            maxlength="120"
            autocomplete="email"
            inputmode="email"
            class="w-full rounded-md border border-[var(--glass-border)] bg-[var(--glass-bg)] px-3 py-2"
          />
        </div>
      </div>

      <div class="grid sm:grid-cols-2 gap-4">
        <div>
          <label for="phone" class="block text-sm mb-1"
            >Teléfono (opcional)</label
          >
          <input
            id="phone"
            name="phone"
            type="tel"
            maxlength="30"
            autocomplete="tel"
            inputmode="tel"
            class="w-full rounded-md border border-[var(--glass-border)] bg-[var(--glass-bg)] px-3 py-2"
          />
        </div>
        <div>
          <label for="topic" class="block text-sm mb-1">Interés</label>
          <select
            id="topic"
            name="topic"
            class="w-full rounded-md border border-[var(--glass-border)] bg-[var(--glass-bg)] px-3 py-2"
          >
            <option value="cursos">Cursos</option>
            <option value="docentes">Capacitación docente</option>
            <option value="empresas">Empresas / Family Day</option>
            <option value="general">Consulta general</option>
          </select>
        </div>
      </div>

      <div>
        <label for="message" class="block text-sm mb-1">Mensaje</label>
        <textarea
          id="message"
          name="message"
          required
          maxlength="2000"
          rows="5"
          class="w-full rounded-md border border-[var(--glass-border)] bg-[var(--glass-bg)] px-3 py-2"
        ></textarea>
      </div>

      <!-- metadatos útiles -->
      <input
        type="hidden"
        name="_subject"
        value="Nueva consulta desde iabot.com.ar"
      />
      <input type="hidden" name="page" value={Astro.url.pathname} />
      <input type="hidden" name="ts" value={Date.now().toString()} />

      <div class="flex items-center gap-4 pt-2">
        <button
          type="submit"
          class="inline-flex items-center justify-center px-6 py-3 rounded-full font-medium bg-[var(--color-primary)] text-[var(--color-black)]
                       hover:bg-[var(--color-primary-hover)] transition-colors shadow-md hover:shadow-lg"
        >
          Enviar
        </button>
        <a
          href="https://wa.me/+5492324468366"
          target="_blank"
          rel="noopener"
          class="text-sm underline hover:no-underline"
        >
          O escribinos por WhatsApp
        </a>
      </div>

      <p
        id="contact-status"
        role="status"
        aria-live="polite"
        class="text-sm mt-3"
      >
      </p>
    </form>
  </div>
</section>

<script is:inline>
  // Envío sin redirección; fallback: el <form> sigue teniendo action/method
  (() => {
    const form = document.getElementById("contact-form");
    const status = document.getElementById("contact-status");
    if (!form || !status) return;

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      const submitBtn = form.querySelector('button[type="submit"]');
      submitBtn && (submitBtn.disabled = true);

      const data = new FormData(form);
      // anti-spam simple
      if (data.get("website")) {
        status.textContent = "Error de validación.";
        submitBtn && (submitBtn.disabled = false);
        return;
      }

      try {
        const res = await fetch(form.action, {
          method: "POST",
          headers: { Accept: "application/json" },
          body: data,
        });

        if (res.ok) {
          form.reset();
          status.textContent = "¡Gracias! Te contactamos a la brevedad.";
          // GTM
          window.dataLayer = window.dataLayer || [];
          window.dataLayer.push({
            event: "contact_submit",
            topic: data.get("topic"),
            page: window.location.pathname,
          });
        } else {
          status.textContent =
            "No pudimos enviar el formulario. Probá de nuevo en unos minutos.";
        }
      } catch {
        status.textContent = "Sin conexión. Intentá nuevamente.";
      } finally {
        submitBtn && (submitBtn.disabled = false);
      }
    });
  })();
</script>

---
import SpecialProgramCard from "../components/SpecialProgramCard.astro";

const programs = [
  {
    icon: "📚",
    title: "Capacitación Docente",
    description:
      "Formación y asesoramiento práctico para docentes de todos los niveles educativos.",
    link: "/capacitacion-docente/",
  },
  {
    icon: "👨‍👩‍👧‍👦",
    title: "Family Day para Empresas",
    description:
      "Una jornada diferente para que empleados y sus familias vivan la robótica como una experiencia lúdica y colaborativa.",
    link: "/family-day-empresas/",
  },
];
---

<section id="special-programs" class="section scroll-mt-14 text-center">
  <h2 class="section-title">Propuestas Especiales ✨</h2>
  <p class="text-lg mb-12 max-w-2xl mx-auto font-body opacity-80">
    Soluciones educativas diferenciadas para instituciones, empresas y docentes.
  </p>

  <div class="grid gap-6 sm:grid-cols-2 max-w-6xl mx-auto">
    {programs.map((program) => <SpecialProgramCard {...program} />)}
  </div>
</section>

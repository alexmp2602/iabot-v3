---
const title = "Robótica Educativa para el Futuro";
const description =
  "Explorá nuestros cursos de robótica con LEGO y programación para chicos y chicas. Desarrollamos creatividad, lógica y trabajo en equipo desde los 5 años.";
const ctaLabel = "Ver cursos disponibles";
const ctaLink = "#cursos";
---

<section
  role="region"
  aria-labelledby="hero-title"
  class="relative flex flex-col-reverse md:flex-row items-center justify-center gap-12 px-6 md:px-12 lg:px-20 min-h-[90vh] overflow-hidden text-center md:text-left bg-[#121212] text-white"
>
  <!-- Video bg (desktop) -->
  <video
    autoplay
    muted
    loop
    playsinline
    preload="none"
    aria-hidden="true"
    class="hidden md:block absolute inset-0 w-full h-full object-cover z-0 pointer-events-none opacity-20 brightness-75"
  >
    <source src="/assets/video-hero.webm" type="video/webm" />
    <source src="/assets/video-hero.mp4" type="video/mp4" />
  </video>

  <!-- Canvas bg (mobile) -->
  <canvas
    id="hero-circuit-bg"
    class="block md:hidden absolute inset-0 w-full h-full z-0 pointer-events-none opacity-20"
  ></canvas>

  <!-- Gradiente (mobile) -->
  <div
    aria-hidden="true"
    class="absolute inset-0 bg-gradient-to-br from-[rgba(50,205,219,0.1)] via-[rgba(120,235,44,0.1)] to-transparent animate-gradientBlur z-0 md:hidden"
  >
  </div>

  <!-- Contenido -->
  <div class="relative z-10 max-w-xl animate-fade-in-up">
    <p
      class="mb-4 text-sm font-semibold uppercase tracking-wide text-[var(--color-secondary)]"
    >
      +500 alumnos desde 2021
    </p>

    <h1
      id="hero-title"
      class="text-4xl sm:text-5xl lg:text-6xl font-display font-bold mb-6 leading-tight text-balance"
    >
      Robótica <span class="relative inline-block">
        Educativa
        <span
          class="absolute bottom-0 left-0 h-1 w-full bg-[var(--color-secondary)] rounded-full animate-slide-in"
        ></span>
      </span> para el Futuro
    </h1>

    <p class="text-lg sm:text-xl opacity-80 mb-8 font-sans leading-relaxed">
      {description}
    </p>

    <a
      href={ctaLink}
      role="button"
      aria-label={ctaLabel}
      class="inline-block text-base sm:text-lg font-semibold font-sans px-6 sm:px-8 py-3 sm:py-4 rounded-full bg-[var(--color-primary)] text-[var(--color-black)] hover:bg-[var(--color-primary-hover)] hover:text-black shadow-md hover:shadow-lg transition-all duration-300 ease-in-out focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-[var(--color-primary)] hover:scale-105"
    >
      {ctaLabel}
    </a>
  </div>
</section>

<script is:inline>
  const prefersReduced = window.matchMedia(
    "(prefers-reduced-motion: reduce)"
  ).matches;
  const isDark = document.documentElement.classList.contains("dark");
  const canvas = document.getElementById("hero-circuit-bg");

  if (!prefersReduced && isDark && canvas) {
    const start = () => {
      const ctx = canvas.getContext("2d");
      let width, height, rafId;
      const dots = [];
      const N = 70;
      const SPEED = 0.3;
      const LINK_DIST = 80;

      const resize = () => {
        width = canvas.width = canvas.offsetWidth;
        height = canvas.height = canvas.offsetHeight;
      };

      const seed = () => {
        dots.length = 0;
        for (let i = 0; i < N; i++) {
          dots.push({
            x: Math.random() * width,
            y: Math.random() * height,
            vx: (Math.random() - 0.5) * SPEED,
            vy: (Math.random() - 0.5) * SPEED,
          });
        }
      };

      let last = 0;
      const animate = (t) => {
        // ~30fps para bajar uso de CPU
        if (t - last < 33) {
          rafId = requestAnimationFrame(animate);
          return;
        }
        last = t;

        ctx.clearRect(0, 0, width, height);
        ctx.fillStyle = "rgba(255,255,255,0.7)";
        ctx.strokeStyle = "rgba(255,255,255,0.06)";
        ctx.lineWidth = 1;

        for (let i = 0; i < dots.length; i++) {
          const d = dots[i];
          d.x += d.vx;
          d.y += d.vy;
          if (d.x < 0 || d.x > width) d.vx *= -1;
          if (d.y < 0 || d.y > height) d.vy *= -1;

          ctx.beginPath();
          ctx.arc(d.x, d.y, 1.5, 0, 2 * Math.PI);
          ctx.fill();

          for (let j = i + 1; j < dots.length; j++) {
            const d2 = dots[j];
            const dx = d.x - d2.x;
            const dy = d.y - d2.y;
            const dist = Math.hypot(dx, dy);
            if (dist < LINK_DIST) {
              ctx.beginPath();
              ctx.moveTo(d.x, d.y);
              ctx.lineTo(d2.x, d2.y);
              ctx.stroke();
            }
          }
        }
        rafId = requestAnimationFrame(animate);
      };

      const onResize = () => {
        resize();
        seed();
      };

      resize();
      seed();
      rafId = requestAnimationFrame(animate);
      window.addEventListener("resize", onResize);
      // Limpieza si navegan
      window.addEventListener("astro:before-swap", () => {
        cancelAnimationFrame(rafId);
        window.removeEventListener("resize", onResize);
      });
    };

    const io = new IntersectionObserver(
      (entries) => {
        if (entries.some((e) => e.isIntersecting)) {
          io.disconnect();
          (window.requestIdleCallback || setTimeout)(start, 1);
        }
      },
      { threshold: 0.1 }
    );

    io.observe(canvas);
  }
</script>

<style>
  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out both;
  }

  @keyframes gradientBlur {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.03) translate(5px, -5px);
    }
  }
  .animate-gradientBlur {
    animation: gradientBlur 16s ease-in-out infinite;
  }

  @keyframes slide-in {
    from {
      transform: scaleX(0);
      opacity: 0;
    }
    to {
      transform: scaleX(1);
      opacity: 1;
    }
  }
  .animate-slide-in {
    animation: slide-in 2s ease-out forwards;
    transform-origin: left;
  }
</style>

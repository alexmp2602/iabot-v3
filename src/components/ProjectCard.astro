---
const { title, kit, description, image, featured = false } = Astro.props;
---

<article
  class={`rounded-2xl border transition-shadow duration-300 flex flex-col h-full overflow-hidden ${
    featured
      ? "shadow-xl border-primary dark:border-secondary ring-2 ring-primary/20 dark:ring-secondary/20"
      : "shadow-sm border-neutral-200 dark:border-neutral-800 hover:shadow-lg"
  } bg-white dark:bg-neutral-900`}
>
  <img
    src={image}
    alt={`Foto del proyecto ${title}`}
    class="w-full h-48 sm:h-52 md:h-48 object-cover object-center"
    loading="lazy"
    decoding="async"
    width="600"
    height="300"
  />

  <div class="p-5 flex-1 flex flex-col justify-between gap-3">
    <header>
      <h3 class="text-xl sm:text-2xl font-bold text-primary leading-tight">
        {title}
      </h3>
      <p
        class="text-sm sm:text-base text-neutral-500 dark:text-neutral-400 italic"
      >
        {kit}
      </p>
    </header>

    <p class="text-sm sm:text-base text-neutral-700 dark:text-neutral-300">
      {description}
    </p>
  </div>
</article>

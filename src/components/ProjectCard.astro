---
const { title, kit, description, image } = Astro.props;
---

<article
  class="bg-white dark:bg-neutral-900 rounded-xl shadow-md overflow-hidden hover:shadow-lg transition h-full flex flex-col"
>
  <img
    src={image}
    alt={`Proyecto ${title}`}
    class="w-full h-48 object-cover"
    loading="lazy"
  />
  <div class="p-4 flex-1 flex flex-col justify-between">
    <div>
      <h3 class="text-lg font-semibold text-primary mb-1">{title}</h3>
      <p class="text-sm text-neutral-600 dark:text-neutral-400 mb-2">{kit}</p>
      <p class="text-sm text-neutral-700 dark:text-neutral-300">
        {description}
      </p>
    </div>
  </div>
</article>

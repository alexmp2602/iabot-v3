---
const { icon, title, description, link, upcoming = false } = Astro.props;
---

{
  !upcoming ? (
    <a
      href={link}
      role="link"
      tabindex="0"
      aria-label={`Ver más sobre ${title}`}
      class="group card flex flex-col gap-4 p-6 text-left rounded-xl backdrop-blur-sm shadow-md transition-all duration-300 hover:shadow-xl hover:-translate-y-1 focus:outline-none focus-visible:ring-2 focus-visible:ring-[var(--color-primary)] focus-visible:ring-offset-2"
    >
      <div class="w-12 h-12 flex items-center justify-center rounded-full bg-[var(--color-primary)]/10 text-[var(--color-primary)] transition-transform duration-300 group-hover:scale-110 text-2xl">
        {icon}
      </div>

      <h3 class="text-lg sm:text-xl font-semibold font-title text-[var(--color-text)] leading-snug">
        {title}
      </h3>

      <p class="text-sm sm:text-base text-[var(--color-text)] opacity-90 font-body leading-relaxed">
        {description}
      </p>

      <span class="mt-auto inline-block text-sm font-semibold text-[var(--color-primary)] dark:text-[var(--color-secondary)] group-hover:underline">
        Ver más →
      </span>
    </a>
  ) : (
    <div class="p-6 rounded-xl shadow-inner bg-[var(--glass-bg)] text-[var(--color-text)]/60 italic flex flex-col justify-center items-center backdrop-blur-sm">
      <div class="text-3xl mb-3">{icon}</div>
      <h3 class="text-xl font-semibold mb-1">{title}</h3>
      <p class="text-sm text-[var(--color-text)]">Próximamente</p>
    </div>
  )
}

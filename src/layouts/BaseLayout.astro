---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

const {
  title = "IABOT | Rob칩tica Educativa",
  description = "Somos una empresa dedicada a la rob칩tica educativa y al desarrollo de soluciones tecnol칩gicas personalizadas para instituciones y empresas.",
} = Astro.props;
---

<!doctype html>
<html lang="es-AR" class="scroll-smooth" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, viewport-fit=cover"
    />
    <meta name="description" content={description} />
    <meta name="color-scheme" content="light dark" />
    <title>{title}</title>

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/assets/img/logo/JPG/iabot.jpg" />
    <meta property="og:locale" content="es_AR" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/assets/img/logo/JPG/iabot.jpg" />

    <meta
      name="theme-color"
      content="#32CDDB"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#121212"
      media="(prefers-color-scheme: dark)"
    />

    <link rel="icon" href="/favicon.ico" />
    <link rel="manifest" href="/site.webmanifest" />
    <link
      rel="preload"
      as="image"
      href="/assets/img/logo/edits/iabot-PNG.png"
      type="image/png"
      fetchpriority="high"
    />

    <script is:inline>
      (() => {
        const stored = localStorage.getItem("theme");
        const prefersDark = matchMedia("(prefers-color-scheme: dark)").matches;
        const theme =
          stored === "dark" || stored === "light"
            ? stored
            : prefersDark
              ? "dark"
              : "light";
        const root = document.documentElement;
        root.classList.add(theme);
        root.classList.remove(theme === "dark" ? "light" : "dark");
        root.setAttribute("data-theme", theme);
      })();
    </script>

    <script is:inline>
      document.addEventListener("DOMContentLoaded", () => {
        const needsAlpine = document.querySelector(
          "[x-data],[x-show],[x-model],[x-bind],[x-cloak]," +
            "[x-transition\\:enter],[x-transition\\:leave]," +
            "[x-on\\:click],[\\@click]"
        );
        if (needsAlpine && !window.Alpine) {
          const s = document.createElement("script");
          s.src = "https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js";
          s.defer = true;
          s.onload = () => window.Alpine && window.Alpine.start();
          document.head.appendChild(s);
        }
      });
    </script>

    <script is:inline>
      let rId;
      window.addEventListener(
        "resize",
        () => {
          cancelAnimationFrame(rId);
          rId = requestAnimationFrame(() => {});
        },
        { passive: true }
      );
      window.addEventListener("scroll", () => {}, { passive: true });
    </script>

    <!-- slot para preloads/meta por p치gina -->
    <slot name="head" />
  </head>

  <body
    class="min-h-screen flex flex-col w-full overflow-x-hidden bg-[var(--color-bg)] text-[var(--color-text)] font-sans antialiased transition-colors duration-300 selection:bg-[var(--color-primary)] selection:text-white"
  >
    <Header />
    <main role="main" id="main-content" tabindex="-1" class="flex-1 w-full">
      <slot />
    </main>
    <Footer />
  </body>
</html>

---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {
  title = "IABOT - Rob칩tica Educativa",
  description = "Cursos de rob칩tica con LEGO y programaci칩n para chicos y chicas desde los 6 a침os.",
} = Astro.props;
---

<!doctype html>
<html lang="es-AR" class="scroll-smooth {getInitialTheme()}" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <!-- SEO Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/images/og-default.jpg" />
    <meta property="og:locale" content="es_AR" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="/images/og-default.jpg" />

    <!-- Color Themes -->
    <meta
      name="theme-color"
      content="#32CDDB"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#121212"
      media="(prefers-color-scheme: dark)"
    />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.ico" />
    <link
      rel="preload"
      as="image"
      href="/images/og-default.jpg"
      type="image/jpeg"
      fetchpriority="high"
    />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bruno+Ace&family=Inter&display=swap"
      rel="stylesheet"
    />

    <!-- Theme Detection (Modo Oscuro/Claro) -->
    <script>
      try {
        const stored = localStorage.getItem("theme");
        const prefersDark = window.matchMedia(
          "(prefers-color-scheme: dark)"
        ).matches;
        const isDark = stored === "dark" || (!stored && prefersDark);
        const root = document.documentElement;
        root.classList.add(isDark ? "dark" : "light");
        root.setAttribute("data-theme", isDark ? "dark" : "light");
      } catch (e) {
        console.warn("Theme detection error", e);
      }
    </script>

    <!-- Alpine.js (si se usa en el proyecto) -->
    <script type="module" defer>
      import Alpine from "alpinejs";
      window.Alpine = Alpine;
      Alpine.start();
    </script>
  </head>

  <body
    class="min-h-screen flex flex-col w-full overflow-x-hidden bg-[var(--color-bg)] text-[var(--color-text)] font-sans antialiased transition-colors duration-300 selection:bg-[var(--color-primary)] selection:text-white"
  >
    <Header />

    <main role="main" id="main-content" tabindex="-1" class="flex-1 w-full">
      <slot />
    </main>

    <Footer />
  </body>
</html>
